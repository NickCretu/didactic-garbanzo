---
import BaseLayout from '@layouts/BaseLayout.astro';
import TrustBand from '@components/home/TrustBand.astro';
import Hero from '@components/home/Hero.astro';
import BrandsSection from '@components/home/BrandsSection.astro';
import CatalogGrid from '@components/home/CatalogGrid.astro';
import ReviewsBanner from '@components/home/ReviewsBanner.astro';
import WhyUs from '@components/home/WhyUs.astro';
import ShippingSection from '@components/home/ShippingSection.astro';
import AboutSection from '@components/home/AboutSection.astro';
import StrengthGuide from '@components/home/StrengthGuide.astro';
import StrengthFinder from '@components/home/StrengthFinder.astro';
import FAQ from '@components/home/FAQ.astro';
import BlogPreview from '@components/home/BlogPreview.astro';

const lang = 'ru';
---

<BaseLayout>
  <TrustBand lang={lang} />
  <BrandsSection lang={lang} />
  <Hero lang={lang} />
  <ReviewsBanner lang={lang} />
  <CatalogGrid lang={lang} showFilter={true} />
  <WhyUs lang={lang} />
  <ShippingSection lang={lang} />
  <AboutSection lang={lang} />
  <StrengthGuide lang={lang} />
  <StrengthFinder lang={lang} />
  <FAQ lang={lang} />
  <BlogPreview lang={lang} />
</BaseLayout>
