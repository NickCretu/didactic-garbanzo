---
import { getTelegramOrderLink, type Language } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const telegramLink = getTelegramOrderLink(lang);
---

<a
  href={telegramLink}
  target="_blank"
  rel="noopener noreferrer"
  class="telegram-float fixed z-40 flex items-center justify-center bg-[#0088cc] text-white rounded-full shadow-lg hover:bg-[#0077b5] hover:scale-105 transition-all focus:outline-none focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2 focus-visible:ring-offset-[#0088cc]"
  aria-label="Order via Telegram"
>
  <svg class="telegram-icon" fill="currentColor" viewBox="0 0 24 24">
    <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
  </svg>
</a>

<style>
  /* Mobile: smaller, positioned to avoid overlap */
  .telegram-float {
    bottom: 1rem;
    right: 1rem;
    width: 3rem;
    height: 3rem;
    animation: pulse 2s infinite;
  }
  
  .telegram-icon {
    width: 1.5rem;
    height: 1.5rem;
  }
  
  /* Tablet and up: larger and more prominent */
  @media (min-width: 768px) {
    .telegram-float {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 3.5rem;
      height: 3.5rem;
    }
    
    .telegram-icon {
      width: 1.75rem;
      height: 1.75rem;
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 4px 16px rgba(0, 136, 204, 0.35);
    }
    50% {
      box-shadow: 0 4px 24px rgba(0, 136, 204, 0.5);
    }
  }
  
  .telegram-float:hover {
    animation: none;
  }
</style>
