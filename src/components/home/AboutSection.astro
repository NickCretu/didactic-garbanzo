---
import { useTranslations, type Language } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="section bg-surface" id="about">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-headline mb-3 md:mb-5">{t.about.title}</h2>
      <p class="text-sm md:text-base text-muted mb-5 md:mb-8">
        {t.about.text}
      </p>
      
      <div class="bg-white rounded-xl md:rounded-2xl p-4 md:p-6 shadow-card">
        <div class="flex flex-col md:flex-row items-center gap-3 md:gap-5 text-center md:text-left">
          <div class="inline-flex items-center justify-center w-12 h-12 md:w-14 md:h-14 bg-surface rounded-xl md:rounded-2xl flex-shrink-0 text-accent">
            <svg class="w-6 h-6 md:w-7 md:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div>
            <h3 class="text-sm md:text-base font-semibold mb-1 md:mb-2">{t.about.authenticityTitle}</h3>
            <p class="text-sm text-muted">{t.about.authenticityText}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
