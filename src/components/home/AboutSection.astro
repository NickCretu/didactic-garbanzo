---
import { useTranslations, type Language } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="section" id="about">
  <div class="container">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-h2 mb-2">{t.about.title}</h2>
      <p class="text-small text-muted mb-6 md:mb-8">
        {t.about.text}
      </p>
      
      <div class="bg-white rounded-xl p-5 md:p-6 shadow-card">
        <div class="flex flex-col md:flex-row items-center gap-4 text-center md:text-left">
          <div class="inline-flex items-center justify-center w-10 h-10 md:w-12 md:h-12 bg-surface rounded-xl flex-shrink-0 text-accent">
            <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <div>
            <h3 class="text-body font-semibold mb-1">{t.about.authenticityTitle}</h3>
            <p class="text-small text-muted">{t.about.authenticityText}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
