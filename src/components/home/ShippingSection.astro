---
import { useTranslations, type Language } from '@i18n/index';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const shippingFeatures = [
  {
    icon: `<svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>`,
    title: t.shipping.deliveryTitle,
    description: t.shipping.deliveryText,
  },
  {
    icon: `<svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
    </svg>`,
    title: t.shipping.paymentTitle,
    description: t.shipping.paymentText,
  },
  {
    icon: `<svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>`,
    title: t.shipping.areasTitle,
    description: t.shipping.areasText,
  },
];
---

<section class="section" id="shipping">
  <div class="container">
    <h2 class="text-h2 text-center mb-6 md:mb-8">{t.shipping.title}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
      {shippingFeatures.map((feature) => (
        <div class="bg-white rounded-xl p-5 md:p-6 text-center shadow-card">
          <div class="inline-flex items-center justify-center w-10 h-10 md:w-12 md:h-12 bg-surface rounded-xl mb-3 md:mb-4 text-accent">
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-body font-semibold mb-1.5 md:mb-2">{feature.title}</h3>
          <p class="text-small text-muted leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
