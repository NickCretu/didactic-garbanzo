---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { useTranslations, getLocalizedPath, type Language } from '@i18n/index';

interface Props {
  lang: Language;
  alternates?: Array<{ lang: Language; url: string }>;
}

const { lang, alternates } = Astro.props;
const t = useTranslations(lang);

const base = import.meta.env.BASE_URL || '/';
const baseClean = base.endsWith('/') ? base.slice(0, -1) : base;
const homePath = `${baseClean}/${lang}/`;

// Use anchor links for single-page sections
const navItems = [
  { href: homePath, label: t.nav.home },
  { href: `${homePath}#catalog`, label: t.nav.catalog },
  { href: `${homePath}#shipping`, label: t.nav.shipping },
  { href: `${homePath}#about`, label: t.nav.about },
  { href: `${homePath}#faq`, label: t.nav.faq },
  { href: getLocalizedPath('/blog/', lang), label: t.blog.title },
];
---

<header class="sticky top-0 z-[10000] bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <nav class="container flex items-center justify-between h-16 md:h-18">
    <!-- Logo -->
    <a href={getLocalizedPath('/', lang)} class="flex items-center gap-2 text-xl font-semibold text-primary">
      <img src={`${baseClean}/logo-new.svg`} alt="Pauch" class="h-8 w-auto" />
      <span class="hidden sm:inline">Pauch</span>
    </a>
    
    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-8">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-body text-muted hover:text-primary transition-colors"
        >
          {item.label}
        </a>
      ))}
    </div>
    
    <!-- Right Side -->
    <div class="flex items-center gap-4">
      <LanguageSwitcher lang={lang} alternates={alternates} />
      
      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 -mr-2 text-muted hover:text-primary"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile Navigation Overlay -->
  <div id="mobile-menu" class="mobile-menu-overlay hidden">
    <div class="mobile-menu-content">
      <nav class="flex flex-col">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="mobile-nav-link"
          >
            {item.label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<style>
  .mobile-menu-overlay {
    position: fixed;
    inset: 0;
    top: 64px;
    z-index: 9999;
    background: #ffffff !important;
    backdrop-filter: none;
  }
  
  .mobile-menu-overlay.hidden {
    display: none;
  }
  
  .mobile-menu-content {
    height: 100%;
    display: flex;
    flex-direction: column;
    background: #ffffff;
  }
  
  .mobile-nav-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 1.25rem 2rem;
    font-size: 1.25rem;
    font-weight: 500;
    color: #1a1a1a;
    transition: all 0.2s;
    border-bottom: 1px solid #f3f4f6;
    background: #ffffff;
  }
  
  .mobile-nav-link:first-child {
    border-top: 1px solid #f3f4f6;
  }
  
  .mobile-nav-link:hover,
  .mobile-nav-link:active {
    background: #f9fafb;
    color: #0066CC;
  }
</style>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuBtn?.querySelector('.menu-icon');
  const closeIcon = menuBtn?.querySelector('.close-icon');
  
  function closeMenu() {
    mobileMenu?.classList.add('hidden');
    menuIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
    menuBtn?.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';
  }
  
  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', (!isOpen).toString());
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    
    // Prevent body scroll when menu is open
    document.body.style.overflow = isOpen ? '' : 'hidden';
  });
  
  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });
</script>
